@model StudentModel

@{
    ViewData["Title"] = "Register Student";
}
<h1>@ViewData["Title"]</h1>

@using(Html.BeginForm()){
    @Html.LabelFor(m => m.Name)
    <br/>
    @Html.TextBoxFor(m => m.Name)
    @Html.ValidationMessageFor(m => m.Name)
    <br/>
    @Html.LabelFor(m => m.StudentId)
    <br />
    @Html.TextBoxFor(m => m.StudentId)
    <br/>
    @Html.LabelFor(m => m.University)
    <br/>
    @Html.TextBoxFor(m => m.University)
    @Html.ValidationMessageFor(m => m.University)
    <br/> 
    @Html.LabelFor(m => m.Course)
    <br />
    @Html.DropDownListFor(m => m.Course, new[] {
        new SelectListItem {Value = "CS", Text = "Computer Science"},
        new SelectListItem {Value = "BIO", Text = "Biology"},
        new SelectListItem {Value = "ART", Text = "20th Century Art"}
    })

    @Html.ValidationSummary()

    <button type="submit">Register</button>
}